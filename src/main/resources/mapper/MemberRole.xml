<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sportsfit.shop.repository.MemberRoleMapper">

    <!-- 회원-역할 관계 조회 -->
    <select id="getRolesByMemberId" parameterType="long" resultType="RoleVo">
        SELECT r.role_id, r.role_name
        FROM roles r
        JOIN member_roles mr ON r.role_id = mr.role_id
        JOIN member m ON mr.member_id = m.member_id
        WHERE m.member_id = #{memberId}
    </select>

    <!-- 회원-역할 관계 삽입 -->
    <insert id="insertMemberRole" parameterType="MemberRoleVo">
        INSERT INTO member_roles (member_id, role_id)
        VALUES (#{memberId}, #{roleId})
    </insert>

    <!-- 회원-역할 관계 삭제 -->
    <delete id="deleteMemberRole" parameterType="MemberRoleVo">
        DELETE FROM member_roles
        WHERE member_id = #{memberId} AND role_id = #{roleId}
    </delete>

</mapper>
