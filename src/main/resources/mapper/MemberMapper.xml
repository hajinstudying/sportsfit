<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sportsfit.shop.repository.MemberRepository">

    <!-- 회원 저장 -->
    <insert id="createMember" parameterType="com.sportsfit.shop.vo.MemberVo">
        INSERT INTO member (name, email, password, address, del, social, cart_id)
        VALUES (#{name}, #{email}, #{password}, #{address}, #{del}, #{social}, #{cartId})
    </insert>

    <!-- 이메일로 회원 조회 -->
    <select id="getMemberByEmail" parameterType="string" resultType="com.sportsfit.shop.vo.MemberVo">
        SELECT * FROM member WHERE email = #{email}
    </select>

    <!-- ID로 회원 조회 -->
    <select id="getMemberById" parameterType="long" resultType="com.sportsfit.shop.vo.MemberVo">
        SELECT * FROM member WHERE member_id = #{memberId}
    </select>

    <!-- 회원 업데이트 -->
    <update id="updateMember" parameterType="com.sportsfit.shop.vo.MemberVo">
        UPDATE member
        SET name = #{name},
            email = #{email},
            password = #{password},
            address = #{address},
            del = #{del},
            social = #{social},
        WHERE member_id = #{memberId}
    </update>

    <!-- 회원 삭제 -->
    <delete id="deleteMember" parameterType="long">
        DELETE FROM member WHERE member_id = #{memberId}
    </delete>

    <!-- 모든 회원 조회 -->
    <select id="listMember" resultType="com.sportsfit.shop.vo.MemberVo">
        SELECT * FROM member
    </select>

    <!-- 비밀번호와 소셜 상태 업데이트 -->
    <update id="updatePasswordAndSocial">
        UPDATE member
        SET password = #{password},
            social = false
        WHERE email = #{email}
    </update>

</mapper>
